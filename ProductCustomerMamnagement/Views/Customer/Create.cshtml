
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>
<form method="post">
    <input type="text" name="FirstName" value="@Model.FirstName" class="form-control" placeholder="FirstName" />
    <span class="text-danger">@Html.ValidationMessage("FirstName")</span>
    <input type="text" name="LastName" value="@Model.LastName" class="form-control" placeholder="LastName" />
    <span class="text-danger">@Html.ValidationMessage("LastName")</span>
    <input type="email" name="Email" value="@Model.Email" class="form-control" placeholder="Email" />
    <span class="text-danger">@Html.ValidationMessage("Email")</span>
    <input type="text" name="Phone" value="@Model.Phone" class="form-control" placeholder="Phone" />
    <span class="text-danger">@Html.ValidationMessage("Phone")</span>
    <input type="text" name="Address" value="@Model.Address" class="form-control" placeholder="Address" />
    <span class="text-danger">@Html.ValidationMessage("Category")</span>
    <input type="date" name="DateJoined" value="@Model.DateJoined" class="form-control" placeholder="DateJoined" />
    <span class="text-danger">@Html.ValidationMessage("DateJoined")</span><br />
    <input type="submit" value="Create" class="btn btn-success" />
</form>
