
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>
<form method="post">
    <input type="hidden" name="ProductId" value="@Model.ProductId" />
    <input type="text" name="Name" value="@Model.Name" class="form-control" placeholder="Name" />
    <textarea name="Description" value="@Model.Description" class="form-control" placeholder="Description"></textarea>
    <input type="text" name="Price" value="@Model.Price" class="form-control" placeholder="Price" />
    <input type="number" name="StockQuantity" value="@Model.StockQuantity" class="form-control" placeholder="StockQuantity" />
    <input type="text" name="Category" value="@Model.Category" class="form-control" placeholder="Category" />
    <input type="submit" value="Update" class="btn btn-success" />
</form>

